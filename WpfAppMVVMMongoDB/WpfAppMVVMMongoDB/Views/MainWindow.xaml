<Window x:Class="WpfAppMVVMMongoDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMVVMMongoDB"
        xmlns:vm="clr-namespace:WpfAppMVVMMongoDB.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <vm:MainWindowMV/>
    </Window.DataContext>

    <Grid>
        <DataGrid x:Name="DataGridItems"
                  VerticalAlignment="Top"
                  IsReadOnly="True"
                  Height="Auto"
                  ItemsSource="{Binding Items}">

        </DataGrid>
        
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Width="100" Height="30" Content="Add person" Command="{Binding InserPerson}"/>
            <Button Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
