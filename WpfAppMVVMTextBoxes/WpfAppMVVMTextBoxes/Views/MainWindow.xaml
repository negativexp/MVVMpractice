<Window x:Class="WpfAppMVVMTextBoxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMVVMTextBoxes"
        xmlns:vm="clr-namespace:WpfAppMVVMTextBoxes.ViewModels"
        xmlns:m="clr-namespace:WpfAppMVVMTextBoxes.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <StackPanel.DataContext>
                <m:TextBoxEntry/>
            </StackPanel.DataContext>
            
            <TextBox Margin="10" Height="25" Text="{Binding Textbox1}"/>
            <TextBox Margin="10" Height="25" Text="{Binding Textbox2}"/>
            <TextBox Margin="10" Height="25" Text="{Binding Textbox3}"/>
            <TextBox Margin="10" Height="25" Text="{Binding Textbox4}"/>
        </StackPanel>
        <Button Height="30" Content="Bruh" Command="{Binding WriteFile}"/>
    </Grid>
</Window>
